<panel id="main_panel" hor_align="center" display_dir="vertical" z="14">
    <container id="header_info" width="0.9" height="0.1"
    ver_align="center" hor_align="space_between"
    content_spacing="10"
    display_dir="horizontal"
    widget_size_height="parent"
    widget_size_width="parent">
        <text>{{{space}}}</text>
        <container id="header_info" width="fit" height="1"
        ver_align="center" hor_align="center"
        content_spacing="10"
        display_dir="vertical"
        widget_size_height="parent"
        widget_size_width="parent">    
            <text>
                {{{preview_mode}}}
            </text>
            <text>
                Enemies Left To Kill: {{{num_enemies_left_to_kill}}}
            </text>
        </container>
        <button id="pause_icon_btn" background_color="220,75,0"
        padding="15,15" border_radius="10" font_size="18">{{{pause_text}}}</button>
    </container>
    <container id="inventory_summary_container" width="1.0" height="0.9" 
    widget_size_height="parent" widget_size_width="parent" hor_align="end">
        <container id="inventory_summary" width="0.15" height="1"
        widget_size_height="parent" widget_size_width="parent"
        display_dir="vertical" ver_align="start"
        hor_align="center"
        content_spacing="0">
            <text>Inventory</text>
            <container id="base_count" width="1" height="80"
            widget_size_width="parent" widget_size_height="pixel"
            ver_align="center"
            display_dir="horizontal" hor_align="space_around">
                <container id="base_img" width="0" height="0"
                widget_size_width="fit"
                widget_size_height="fit">
                    <image image_src="base_icon.png" width="40" height="40"
                    widget_size_width="pixel" widget_size_height="pixel" />
                </container>
                <text font_size="20">x{{{num_bases}}}</text>
            </container>
            <container id="base_ext_count" width="1" height="80"
            widget_size_width="parent" widget_size_height="pixel"
            ver_align="center"
            display_dir="horizontal" hor_align="space_around">
                <container id="base_img" width="40" height="40"
                widget_size_width="fit"
                widget_size_height="fit">
                    <image image_src="ext.png" width="45" height="40"
                    widget_size_width="pixel" widget_size_height="pixel" />
                </container>
                <text font_size="20">x{{{num_base_exts}}}</text>
            </container>
            <container id="gun_count" width="1" height="80"
            widget_size_width="parent" widget_size_height="pixel"
            ver_align="center"
            display_dir="horizontal" hor_align="space_around">
                <container id="base_img" width="40" height="40"
                widget_size_width="fit"
                widget_size_height="fit">
                    <image image_src="gun.png" width="60" height="40"
                    widget_size_width="pixel" widget_size_height="pixel" />
                </container>
                <text font_size="20">x{{{num_guns}}}</text>
            </container>
        </container>
    </container>
</panel>